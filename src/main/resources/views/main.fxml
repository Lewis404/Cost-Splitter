    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>
    <JFXTreeTableView fx:id="tblItems" layoutX="14.0" layoutY="49.0">
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
        </padding>
    </JFXTreeTableView>
    <VBox cache="true" layoutX="541.0" layoutY="30.0" prefHeight="468.0" prefWidth="272.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="500.0" AnchorPane.rightAnchor="0.0"
