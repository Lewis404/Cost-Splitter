                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </JFXTextField>
            <FlowPane fx:id="checkListPane" prefHeight="39.0" prefWidth="222.0">
                <VBox.margin>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                </VBox.margin>
            </FlowPane>
            <HBox alignment="CENTER">
                <JFXButton fx:id="btnAddItem" buttonType="RAISED" onAction="#addItem" text="Add Item"/>
