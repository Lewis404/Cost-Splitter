                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
            </JFXButton>
            <JFXButton fx:id="btnReset" alignment="BOTTOM_CENTER" buttonType="RAISED" ripplerFill="#946d6d"
                       text="Reset">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
            </JFXButton>
            <JFXButton fx:id="btnFinish" alignment="BOTTOM_CENTER" buttonType="RAISED" ripplerFill="#946d6d"
                       text="Finish">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
            </JFXButton>
        </HBox>
    </VBox>
