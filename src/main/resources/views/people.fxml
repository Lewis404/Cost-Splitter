                <DropShadow color="#8a8989"/>
            </effect>
        </JFXChipView>
    </center>
    <bottom>
        <JFXButton fx:id="btnSubmit" buttonType="RAISED" onAction="#submit" style="-fx-background-color: #ffffff;"
                   text="Add People" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </BorderPane.margin>
            <font>
                <Font size="29.0"/>
            </font>
        </JFXButton>
    </bottom>
    <top>
        <Label text="People" BorderPane.alignment="CENTER">
            <font>
                <Font size="33.0"/>
            </font>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </Label>
    </top>
</BorderPane>
